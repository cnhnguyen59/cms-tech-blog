
<div class="container d-flex flex-wrap justify-content-center m-3" style=" min-width:100vh">
    {{#each articles}}
        <div class="card text-white bg-secondary mb-3" style="width: 100%;">
            <div class="card-body">
            <h4 class="card-title"><a href="article/{{this.id}}" style="color: #8ABD91; text-decoration: none;">{{this.title}}</a></h4>
            <p class="card-text">{{this.description}}</p>
            </div>
        <div class="card-header px-3 p-0">
            <p class="m-0" style="font-size: .75rem;">By: {{this.user.username}}</p>
            <p class="m-0" style="font-size: .625rem;">{{this.date_created}}</p>
            </div>
        </div>
    {{/each}}
</div>